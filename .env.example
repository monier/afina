# Ports
API_PORT=5100
WEB_PORT=3000
DB_PORT=5432

# Database
DB_HOST=postgres
DB_NAME=afina_db
DB_USER=postgres
DB_PASSWORD=postgres

# API
ASPNETCORE_ENVIRONMENT=Development
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Web
VITE_API_URL=http://localhost:5100/api/v1

# Logging Configuration (sink)
# Options: Grafana, StdOut
LOGGING_PROVIDER=StdOut

# Grafana Configuration (for Grafana logging)
GRAFANA_LOKI_ENDPOINT=http://loki:3100
GRAFANA_SERVICE_NAME=afina-api
GRAFANA_SERVICE_VERSION=1.0.0

# Docker Compose Profiles
# Available profiles: observability (enables Grafana + Loki)
# To enable: COMPOSE_PROFILES=observability
COMPOSE_PROFILES=
